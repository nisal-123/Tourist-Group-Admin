<!-- Modern Dashboard Content -->
<div class="dashboard-content">
  <!-- Welcome Section -->
  <div class="row mb-4" data-aos="fade-up">
    <div class="col-12">
      <div class="card bg-gradient-primary text-white border-0">
        <div class="card-body p-4">
