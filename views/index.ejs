                    <div class="fw-semibold text-success">$<%= booking.paymentInfo.amount.toLocaleString() %></div>
                    <div class="small text-success">
                      <i class="bi bi-check-circle me-1"></i><%= booking.bookingStatus.charAt(0).toUpperCase() + booking.bookingStatus.slice(1) %>
                    </div>
                  </div>
                </div>
